// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id               String   @id @default(cuid())
  title            String
  description      String
  start_at         DateTime
  due_at           DateTime
  end_at           DateTime
  advancement      Int
  product_owner    User     @relation(fields: [product_owner_id], references: [id])
  product_owner_id String

}

model User {
  id        String @id @default(cuid())
  lastname  String
  firstname String
  mail      String @unique
  roles     String
  password  String


  Project       Project[]
  Notifications Notfications[]
}

model Notfications {
  id         String   @id @default(cuid())
  created_at DateTime @default(now())
  user       User     @relation(fields: [user_id], references: [id])
  user_id    String
  is_read    Boolean  @default(false)
  data       Json


}
